extends structure/default.jade

block content
    .container
        -var mails = ""
        table.table.table-striped
            thead
                tr
                    th Firstname
                    th Lastname
                    th Email
                    th Results
            tbody
                for user in users
                    tr
                        td= user.name
                        td= user.surename
                        td
                            - var mail = user._id + "@student.utwente.nl"
                            - mails += mail + ","
                            a(href="mailto:" + mail)= user._id
                        td
                            a(href="users/" + user._id) View
        hr
        a(href="mailto:" + mails) Click to send a mail to all students in the group