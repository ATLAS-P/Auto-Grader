//variables

blueish = rgb(0, 129, 221)

//basic functions and usefull classes

transform(n)
	-webkit-transform n
	transform n
		
.right-align
	text-align right

.hide
	display none

.left
	float left

.right
	float right

.center
	text-align center

//element styling, document layout

body, html
	height 100%
	box-sizing border-box

div
	box-sizing border-box

body
	background-color #fefefe

.wrapper
	min-height 100%
	width 100%
	position relative
	overflow auto
	background-color #f5f5f5

.btn:focus, .btn:active
	outline none !important

#content
	padding-bottom 80px
	margin-top 40px

#footer
	position absolute
	bottom 10px
	width 100%

#header
	height 105px
	background-color #e2e2e2
	-webkit-box-shadow: 0px 5px 10px 0px rgba(0,0,0,0.25)
	box-shadow: 0px 5px 10px 0px rgba(0,0,0,0.25)

//headings

#subheader
	margin-top -12px
	font-family Open Sans
	font-weight 100
	font-size 20px
	text-align left

h3.special
	font-family Open Sans
	font-weight 100
	font-size 22px
	color blueish
	text-align left

//upload/dropzone page

#upload
	display none
	margin-bottom 40px
	margin-top 20px

#errMessage
	font-family Open Sans
	margin-top 10px
	color #df0000
	display none

#uploadButtons
	margin-top 10px
	:not(:nth-child(1))
		margin-left 6px

#testResults
	display none
	margin-top 40px

#studentInfo
	display none

textarea
	min-height 100px

#profileImage
	float right
	padding-top 13px
	img
		width 75px
		border-radius 50px
	a:hover, a:focus
		text-decoration none

#profileImageID
	width: 100px
	height: 100px
	font-size: 24px
	color: #fff
	text-align: center
	line-height: 100px
	border-radius 50px

.group
	background-color white
	padding 15px
	height 175px
	h3
		margin-top 10px
		margin-bottom 20px
		text-align center
	text-align center
	margin-bottom 30px
	border-radius 5px
	-webkit-box-shadow: 5px 5px 10px 0px rgba(0,0,0,0.25)
	box-shadow: 5px 5px 10px 0px rgba(0,0,0,0.25)
	transition 0.2s

.group:hover
	cursor pointer
	transition 0.2s
	-webkit-box-shadow: 5px 5px 10px 0px rgba(0,0,0,0.4)
	box-shadow: 5px 5px 10px 0px rgba(0,0,0,0.4)

#sendButtons
	@extends .center
	:not(:nth-child(1))
		margin-left 6px

#partners
	height: 150px

date
	cursor help
	text-decoration underline

.fixed240
	width 240px

.fixed180
	width 240px

.top40
	margin-top 40px
	
.disabled
	display none

.panel-heading
	height 36px

.failed
	background-color #f2dede !important

.passed
	background-color #dff0d8 !important

#updateFeadback
	margin-top 10px

#feedbackMessage
	margin-top 5px

#feedbackMessage.success
	color green

#feedbackMessage.fail
	color #df0000

#welcome_message
	margin-top 100px
	font-size 18px

#title_header a:hover, #title_header a:active, #title_header a:focus
	text-decoration none

#title_header
	a
		color #333
	margin-top 10px

h1, h2, h3
	font-family: Open Sans