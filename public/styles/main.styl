//variables

blueish = rgb(0, 129, 221)

//basic functions and usefull classes

transform(n)
	-webkit-transform n
	transform n
		
.right-align
	text-align right

.hide
	display none

.left
	float left

.right
	float right

.center
	text-align center

//element styling, document layout

body, html
	height 100%
	box-sizing border-box

div
	box-sizing border-box

body
	background-color #fefefe

.wrapper
	min-height 100%
	width 100%
	position relative
	overflow auto

.btn:focus, .btn:active
	outline none !important

#content
	padding-bottom 80px

#footer
	position absolute
	bottom 0px
	width 100%

#header
	height 170px

//headings

#subheader
	margin-top -12px
	font-family Open Sans
	font-weight 100
	font-size 20px
	text-align left

h3.special
	font-family Open Sans
	font-weight 100
	font-size 22px
	color blueish
	text-align left

//upload/dropzone page

#upload
	display none
	margin-bottom 40px

#errMessage
	font-family Open Sans
	margin-top 10px
	color #df0000
	display none

#uploadButtons
	margin-top 8px
	:not(:nth-child(1))
		margin-left 6px

#testResults
	display none
	margin-top 40px

#studentInfo
	display none

textarea
	min-height 100px

#profileImage
	float right
	padding-top 20px
	img
		width 100px
		border-radius 50px
	a:hover, a:focus
		text-decoration none

#profileImageID
	width: 100px
	height: 100px
	font-size: 24px
	color: #fff
	text-align: center
	line-height: 100px
	border-radius 50px

.group
	border 1px dashed blueish
	padding 15px
	height 175px
	h3
		margin-top 10px
		margin-bottom 20px
		text-align center
	text-align center
	margin-bottom 20px

.group:hover
	border 1px solid blueish
	cursor pointer

#sendButtons
	@extends .center
	:not(:nth-child(1))
		margin-left 6px

#partners
	height: 150px

date
	cursor help
	text-decoration underline

.fixed240
	width 240px

.fixed180
	width 240px

.top40
	margin-top 40px
	
.disabled
	display none
